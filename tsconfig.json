{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "./dist",
    "target": "es2022",
    "module": "NodeNext",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
  ]
}
